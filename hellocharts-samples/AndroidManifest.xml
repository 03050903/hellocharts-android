<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lecho.sample.hellocharts"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="lecho.sample.hellocharts.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lecho.sample.hellocharts.ColumnChartActivity"
            android:label="@string/title_activity_column_chart" >
        </activity>
        <activity
            android:name="lecho.sample.hellocharts.LineChartActivity"
            android:label="@string/title_activity_line_chart" >
        </activity>
    </application>

</manifest>
